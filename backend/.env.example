# Alpha Machine Environment Variables
# Copy this file to .env and fill in your values

# ===================
# Database
# ===================
DATABASE_URL=postgresql://alpha:your_password_here@localhost:5432/alphamachine

# ===================
# Redis
# ===================
REDIS_URL=redis://localhost:6379

# ===================
# Market Data API Keys
# ===================
POLYGON_API_KEY=your_polygon_key_here
FINNHUB_API_KEY=your_finnhub_key_here
ALPHA_VANTAGE_API_KEY=your_alphavantage_key_here

# ===================
# Sentiment API Keys
# ===================
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here
REDDIT_USER_AGENT=alpha-machine-bot/1.0
NEWS_API_KEY=your_newsapi_key_here

# ===================
# AI Model API Keys
# ===================
OPENAI_API_KEY=your_openai_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here
GOOGLE_AI_API_KEY=your_google_ai_key_here

# ===================
# Trading Parameters
# ===================
STARTING_CAPITAL=50000.0
MAX_POSITION_SIZE_PCT=0.10
MAX_SINGLE_POSITION_PCT=0.30
MIN_CONFIDENCE_FOR_TRADE=3
STOP_LOSS_PCT=0.10
